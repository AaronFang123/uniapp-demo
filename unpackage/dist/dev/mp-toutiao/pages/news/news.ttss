.search-input{
    /* 内边距 */
    padding: 20rpx;
}
.search-input>input{ 
    background: #F4F4F4;
    box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, .3);
}
.topic-search{
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    -webkit-box-pack: center;
    -webkit-justify-content: center;
            justify-content: center;
    -webkit-box-align: center;
    -webkit-align-items: center;
            align-items: center;
    font-size: medium;
}
.topic-swiper{
/*    border: 1upx solid; */
    padding: 0 20rpx 20rpx 20rpx;
    /* height: 100% !important; */
}
.topic-swiper image{
    width: 100%;
    box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, .3);
}
.topic-new{
    padding: 20rpx;
}
.topic-new>view:first-child{
    padding-bottom: 10rpx;
    font-size: 32rpx;
}
.topic-new>view:last-child{
    padding: 10rpx 0;
}


