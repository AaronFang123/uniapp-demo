
.topic-list>image{
    width: 150rpx;
    height: 150rpx;
    border: 10rpx;
    margin: 10rpx 20rpx;
    box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, .3);
}
.topic-list{
    border-bottom: 1rpx solid #EEEEEE;
    box-shadow: 0 2rpx 4rpx rgba(0, 0, 0, .3);
    background-color: #FFFFFF !important;
    margin: 10rpx 15rpx;
}
.topic-list>view>view{
    color: #A4A4A4;
}
/* 话题名称 */
.topic-list>view>view:first-child{
    color: #333333;
    font-size: 32rpx;
}

