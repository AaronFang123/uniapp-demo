<view class="user-chat-item"><block tt:if="{{item.formatedTime}}"><view class="user-chat-time u-f-ajc">{{''+item.formatedTime+''}}</view></block><view class="{{(('user-chat-list u-f ')+' '+((item.isMyMsg)?'user-chat-me':''))}}"><block tt:if="{{!item.isMyMsg}}"><image src="{{item.userPic}}" mode="widthFix" lazy-load></image></block><view class="user-chat-list-body"><block tt:if="{{item.type=='text'}}"><text>{{item.data}}</text></block><block tt:if="{{item.type=='img'}}"><image src="{{item.data}}" mode="widthFix" lazy-load></image></block></view><block tt:if="{{item.isMyMsg}}"><image src="{{item.userPic}}" mode="widthFix" lazy-load></image></block></view></view>