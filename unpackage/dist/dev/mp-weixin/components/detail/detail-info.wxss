.common-list{
       padding: 20rpx;
}
.common-list-l image{
        width: 70rpx;
        height: 70rpx;
        border-radius: 100%;
}
.common-list-l{
        /* 不会被压缩 */
        -webkit-flex-shrink: 0;
                flex-shrink: 0;
}
.common-list-r{
        /* 右边拉满 */
        -webkit-box-flex: 1;
        -webkit-flex: 1;
                flex: 1;
        margin-left: 15rpx;
        padding-bottom: 10rpx;
        border-bottom: 1rpx solid #EEEEEE;
}
.common-list-r>view:nth-child(1){
}
    /* 昵称 年龄+性别样式 */
.common-list-r>view:nth-child(1)>view:first-child{
        color: #999999;
        font-size: 28rpx;
        line-height: 0;
}
    /* 关注按钮样式 */
.common-list-r>view:nth-child(1)>view:last-child{
        background: #EEEEEE;
        padding: 0 10rpx;
        font-size: 28rpx;
}
.common-list-r>view:nth-child(2){
        font-size: 26rpx;
        padding: 12rpx 0;
}
.common-list-r>view:nth-child(3){
        position: relative;
        font-size: 24rpx;
}
.common-list-r>view:nth-child(3)>image{
        width:100%;
        border-radius: 10rpx;
        margin-bottom: 10rpx;
}
.common-list-play,.common-list-playinfo{
        position: absolute;
        color: #FFFFFF;
}
.common-list-play{
        font-size: 100rpx;
}
.common-list-playinfo{
        right: 10rpx;
        bottom: 10rpx;
        background: rgba(51,51,51,0.5);
        border-radius: 20rpx;
        padding: 0 20rpx;
        font-size: 25rpx;
}
    /* 分享样式 */
.common-list-share{
        background: #EEEEEE;
       /* 宽度全部填充 */
        width: 100%;
        border-radius: 10rpx;
        padding: 10rpx;
}
.common-list-share>image{
        width: 200rpx;
        height: 150rpx;
        margin-right: 10rpx;
}
.common-list-r>view:nth-child(4){
}
.common-list-r>view:nth-child(4)>view{
        color: #AAAAAA;
}
.common-list-r>view:nth-child(4)>view:first-child{
        color: #AAAAAA;
        font-size: 20rpx !important;
}
    /* 点赞、评论、转发样式 */
.common-list-r>view:nth-child(4)>view:nth-child(2)>view{
        margin-left: 10rpx;
        padding: 5rpx;
        font-size: 20rpx !important;
}
.common-list-r{
    border-bottom: 0;
}
.common-list{
    border-bottom: 1rpx solid #EEEEEE;
}
.common-list-r-time{
    padding: 15rpx 0;
    color: #CCCCCC !important;
    font-size: 25rpx;
    background:#FFFFFF !important;
}
    /* 昵称 年龄+性别样式 */
.common-list-r>view:nth-child(1)>view:nth-child(1)view:first-child{
        color: #999999;
        font-size: 28rpx;
        line-height: 0;
}
    /* 关注按钮样式 */
.common-list-r>view:nth-child(1)>view:nth-child(1)>view:last-child{
        background: #EEEEEE;
        padding: 0 10rpx;
        font-size: 28rpx;
}
.active{
        color: #009687 !important;
        font-size: 32rpx;
}

