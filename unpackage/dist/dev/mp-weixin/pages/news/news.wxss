
.nav-left>view,
.nav-right>view {
    font-size: 32rpx;
}
.nav-left {
    width: 100%;
}
.nav-left>view {
    display: 1;
    text-align: left;
    font-size: 57rpx;
    color: #FFFFFF;
}
.nav-right {
    width: 100%;
}
.nav-right>view {
    display: 1;
    text-align: right;
    font-size: 57rpx;
    color: #FFFFFF;
}
.nav-tab-bar {
    width: 100%;
    margin: -10rpx;
    position: relative;
}
.nav-tab-bar>view {
    /*  border: 1upx solid; */
    /*  width: 50%; */
    margin: -60rpx;
    font-size: medium;
    padding: 0 90rpx;
    font-weight: bold;
    color: #555500;
}
.nav-tab-bar-underLine {
    border-bottom: 5rpx solid #FFFFFF;
    border-top: 5rpx solid #FFFFFF;
    width: 75rpx;
    border-radius: 20rpx;
    position: absolute;
    top: 30rpx;
}
.active {
    font-size: 80rpx;
    color: #FFFFFF !important;
}
.common-list{
   padding: 20rpx;
}
.common-list-l image{
    width: 90rpx;
    height: 90rpx;
    border-radius: 100%;
}
.common-list-l{
    /* 不会被压缩 */
    -webkit-flex-shrink: 0;
            flex-shrink: 0;
}
.common-list-r{
    /* 右边拉满 */
    -webkit-box-flex: 1;
    -webkit-flex: 1;
            flex: 1;
    margin-left: 15rpx;
    padding-bottom: 10rpx;
    border-bottom: 1rpx solid #EEEEEE;
}
.common-list-r>view:nth-child(1){
}

/* 昵称 年龄+性别样式 */
.common-list-r>view:nth-child(1)>view:first-child{
    color: #999999;
    font-size: 30rpx;
    line-height: 0;
}
.tag-age-gender{
    background: #009687;
    color: #FFFFFF;
    font-size: 23rpx;
    padding: 0 5rpx;
    margin-left: 10rpx;
    border-radius: 15rpx;
}

/* 关注按钮样式 */
.common-list-r>view:nth-child(1)>view:last-child{
    background: #EEEEEE;
    padding: 0 10rpx;
    font-size: small;
}
.common-list-r>view:nth-child(2){
    font-size: large;
    padding: 12rpx 0;
}
.common-list-r>view:nth-child(3){
    position: relative;
}
.common-list-r>view:nth-child(3)>image{
    width:100%;
    border-radius: 10rpx;
}
.common-list-play,.common-list-playinfo{
    position: absolute;
    color: #FFFFFF;
}
.common-list-play{
    font-size: 100rpx;
}
.common-list-playinfo{
    right: 10rpx;
    bottom: 10rpx;
    background: rgba(51,51,51,0.73);
    border-radius: 20rpx;
    padding: 0 20rpx;
    font-size: 25rpx;
}

/* 分享样式 */
.common-list-share{
    background: #EEEEEE;
   /* 宽度全部填充 */
    width: 100%;
    border-radius: 10rpx;
    padding: 10rpx;
}
.common-list-share>image{
    width: 200rpx;
    height: 150rpx;
    margin-right: 10rpx;
}
.common-list-r>view:nth-child(4){
}
.common-list-r>view:nth-child(4)>view{
    color: #AAAAAA;
}

/* 点赞、评论、转发样式 */
.common-list-r>view:nth-child(4)>view:nth-child(2)>view{
    margin-left: 10rpx;
    padding: 5rpx;
}

